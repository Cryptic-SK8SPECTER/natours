extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Crie uma nova conta
      form.form.form-sign-up--data
        .form__group
          label.form__label(for='name') Nome
          input#name.form__input(type='text', placeholder='Informe o seu nome', required)
        .form__group.ma-bt-md
        .form__group
          label.form__label(for='email') Email
          input#email.form__input(type='email', placeholder='Informe o seu email', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Senha
          input#password.form__input(type='password', placeholder='Informe a sua senha', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='password') Confirmar Senha
          input#passwordConfirm.form__input(type='password', placeholder='Confirme a sua senha', required, minlength='8')
        .form__group
          button.btn.btn--green(type='submit') Sign Up